<%= render 'shared/page_title', title: "Chefs" %>

<ul class="nav nav-tabs">
  <li>
    <%= link_to "Recipes", recipes_path %>
  </li>
  <li class="active">
    <%= link_to "Chefs", chefs_path %>
  </li>
</ul>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= will_paginate %>
  </div>
</div>

<% @chefs.each do |chef| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center">
     <%= link_to image_tag(chef.picture? ? chef.picture.url :  'missing.png', size:"200", class: 'gravatar'), chef_path(chef) %></br>
     Chef name: <%= chef.name.capitalize %></br>
    </div>
  </div>
<% end %>